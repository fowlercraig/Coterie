{% assign vendor = true %}

{% for link in linklists.main-menu.links %}
{% assign boom = link.handle %}
{% if vendor == true and collection.handle == boom %}
{% assign vendor = false %}
{% endif %}
{% endfor %}

<div class="page-header">
  <div class="centered centered-full">
    <div class="fs-row">

      {% if template == 'cart' %}
      <div class="fs-cell fs-all-full">
      {% else %}
      <div class="fs-cell {% if vendor %}fs-all-half{% else %}fs-all-full{% endif %}">
      {% endif %}

        <div class="page-title_wrapper">
          <h1 class="page-title">
            {% if template contains 'search' %}search results.{% endif %}
            {% if template contains 'page' %}{{ page.title }}.{% endif %}
            {% if template == 'index' %}{{ shop.name }}.{% endif %}
            {% if template == 'collection' %}{{ collection.title }}.{% endif %}
            {% if template == 'cart' %}
            your cart.
            <span class="page-title_sub fl-right"><small>subtotal: <small>{{ cart.total_price | money }}</small></small></span>
            {% endif %}
          </h1>
          {% if search.performed %}
          {% if search.results_count == 0 %}
          <h3>{{ 'general.search.no_results_html' | t: terms: search.terms }}</h3>
          {% else %}
          <h3>{{ 'general.search.results_for_html' | t: terms: search.terms }}</h3>
          {% endif %}
          {% endif %}
        </div>
      </div>


      {% if template == 'collection' %}
      {% if template != 'index' %}
      {% if vendor %}
      <div class="page-header--more text-right fs-cell fs-all-half fs-contained">
        <a href="#" class="swap toggle_linked" data-swap-target=".brand-info" data-swap-linked=".toggle_linked">more about <br>{{ collection.title }}</a>
      </div>
      {% endif %}
      {% endif %}
      {% endif %}
      

    </div>
  </div>
</div>